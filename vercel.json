{
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(dashboard|transactions|account|settings)(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/app/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/forgot-password",
      "destination": "/index.html"
    },
    {
      "source": "/update-password",
      "destination": "/index.html"
    }
  ]
}