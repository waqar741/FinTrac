{
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(dashboard|transactions|account|settings)(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!assets/|image/|docs/|favicon|site.webmanifest|robots.txt|sitemap.xml|info|login|signup|students|freelancers|couples|small-business|travelers|roommates|contractors|debt-payoff|privacy|minimalist).*)",
      "destination": "/index.html"
    }
  ]
}